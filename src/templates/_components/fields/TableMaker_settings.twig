{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("supercool\\tablemaker\\assetbundles\\tablemakerfield\\TableMakerFieldAsset") %}

<h2>Columns Table</h2>

{{ forms.textField({
  label: "Label"|t,
  id: 'columnsLabel',
  name: 'columnsLabel',
  value: field['columnsLabel'],
}) }}

{{ forms.textareaField({
  label: "Instructions"|t,
  id: 'columnsInstructions',
  name: 'columnsInstructions',
  value: field['columnsInstructions'],
}) }}

{{ forms.textField({
  label: "Add column label"|t,
  id: 'columnsAddRowLabel',
  name: 'columnsAddRowLabel',
  value: field['columnsAddRowLabel'],
}) }}

<h2>Rows Table</h2>

{{ forms.textField({
  label: "Label"|t,
  id: 'rowsLabel',
  name: 'rowsLabel',
  value: field['rowsLabel'],
}) }}

{{ forms.textareaField({
  label: "Instructions"|t,
  id: 'rowsInstructions',
  name: 'rowsInstructions',
  value: field['rowsInstructions'],
}) }}

{{ forms.textField({
  label: "Add row label"|t,
  id: 'rowsAddRowLabel',
  name: 'rowsAddRowLabel',
  value: field['rowsAddRowLabel'],
}) }}


